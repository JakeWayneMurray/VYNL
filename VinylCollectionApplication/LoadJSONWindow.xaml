<Window x:Class="VinylCollectionApplication.LoadJSONWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VinylCollectionApplication"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        Title="LoadJSONWindow" Height="410" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <materialDesign:Card Margin="10">
            <TextBox Height="300" x:Name="JSONTextBox"></TextBox>
            </materialDesign:Card>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Click="SaveButton_Click" Margin="10">
                    <TextBlock Text="SAVE"></TextBlock>
                </Button>
                <Button x:Name="CancelButton" Click="CancelButton_Click" Margin="10">
                    <TextBlock Text="CANCEL"></TextBlock>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
